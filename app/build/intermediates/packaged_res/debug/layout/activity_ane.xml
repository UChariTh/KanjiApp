<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/japan"
    android:orientation="vertical"
    tools:context=".Ane">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout01"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/backbutton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/arrow_back_ios_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/notebutton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="25dp"
            android:src="@drawable/edit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/aclonica"
            android:gravity="center"
            android:text="Ane kanji"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.304"
            app:layout_constraintStart_toEndOf="@+id/backbutton"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toTopOf="parent">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifImageView"
            android:layout_width="165dp"
            android:layout_height="146dp"
            android:layout_gravity="center"
            android:src="@drawable/itchi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="145dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:layout_marginStart="44dp"
            android:layout_marginTop="28dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="一  itchi"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/textView7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gifImageView" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="189dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="33dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/meaning_one_1"
            android:paddingTop="5dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/gifImageView" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="82dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="49dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="on:イチ ichi         kun:ひと・つ hitho.thu"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/buttonAudio"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <Button
            android:id="@+id/buttonAudio"
            android:layout_width="64dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="48dp"
            android:textAlignment="center"
            app:icon="@android:drawable/ic_lock_silent_mode_off"
            app:iconPadding="@android:dimen/notification_large_icon_width"
            app:iconTint="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/textView8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:layout_constraintVertical_bias="1.0" />


        <TextView
            android:id="@+id/textView8"
            android:layout_width="332dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="一 いち ichi (one,numeric)"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/textView9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <Button
            android:id="@+id/buttonAudio2"
            android:layout_width="49dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            app:icon="@android:drawable/ic_lock_silent_mode_off"
            app:iconPadding="@android:dimen/notification_large_icon_width"
            app:iconTint="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/textView9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:layout_constraintVertical_bias="0.958" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="308dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="一 ひとつ hithothu  (for one thing) "
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="254dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:layout_marginStart="24dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="一員 いちいん ichiin (person)"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/textView11"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <Button
            android:id="@+id/buttonAudio3"
            android:layout_width="49dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="28dp"
            android:textAlignment="center"
            app:icon="@android:drawable/ic_lock_silent_mode_off"
            app:iconPadding="@android:dimen/notification_large_icon_width"
            app:iconTint="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/textView11"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonAudio2"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/buttonAudio4"
            android:layout_width="49dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="64dp"
            android:textAlignment="center"
            app:icon="@android:drawable/ic_lock_silent_mode_off"
            app:iconPadding="@android:dimen/notification_large_icon_width"
            app:iconTint="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            app:layout_constraintVertical_bias="0.883" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/navigateGame"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/block04but"
        android:orientation="vertical"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        android:layout_weight="20">

        <Button
            android:id="@+id/navigateWritingGame"
            android:layout_width="280dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_rounded_corner"
            android:drawableLeft="@drawable/writing"
            android:drawablePadding="8dp"
            android:text="  Write Kanji"
            android:fontFamily="@font/aclonica"
            android:textSize="18dp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="8dp" />

        <Button
            android:id="@+id/navigateSpeakingGame"
            android:layout_width="280dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_rounded_corner"
            android:drawableLeft="@drawable/speak"
            android:drawablePadding="8dp"
            android:text="Pronounce Kanji"
            android:fontFamily="@font/aclonica"
            android:textSize="18dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>