<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/japan"
    android:orientation="vertical"
    tools:context=".Itchi">

    <Button
        android:id="@+id/backbutton"
        android:layout_width="47dp"
        android:layout_height="wrap_content"
        android:background="?attr/homeAsUpIndicator"
        android:text=""
        tools:layout_editor_absoluteY="4dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="402dp"
        android:layout_height="51dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="62dp"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:text="Ni kanji"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/gifImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backbutton" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView"
        android:layout_width="165dp"
        android:layout_height="146dp"

        android:layout_gravity="center"
        android:layout_marginStart="138dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="28dp"
        android:src="@drawable/ni"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="145dp"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_marginStart="44dp"
        android:layout_marginTop="28dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="ニ  Ni"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gifImageView" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="189dp"
        android:layout_height="34dp"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="33dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="meaning: Two , 2"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/gifImageView" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="82dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="49dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="on:ニ, ジ ni,ji
                kun:ふた,ふたつ futha, futhathu"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/buttonAudio"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/buttonAudio"
        android:layout_width="64dp"
        android:layout_height="72dp"
        android:layout_gravity="center"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="48dp"
        android:textAlignment="center"
        app:icon="@android:drawable/ic_lock_silent_mode_off"
        app:iconPadding="@android:dimen/notification_large_icon_width"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button6"
        android:layout_width="132dp"
        android:layout_height="37dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/round_button"
        android:text="Add Note"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/gifImageView"
        app:layout_constraintHorizontal_bias="0.035"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText,MissingConstraints,SpUsage" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="332dp"
        android:layout_height="28dp"
        android:layout_gravity="center"
        android:layout_marginStart="47dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="二男 じなん jinan (second son)"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />


    <Button
        android:id="@+id/buttonAudio2"
        android:layout_width="49dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:textAlignment="center"
        app:icon="@android:drawable/ic_lock_silent_mode_off"
        app:iconPadding="@android:dimen/notification_large_icon_width"
        app:iconTint="@color/black"

        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.91" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="308dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginStart="40dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="二階 にかい nikai (second floor)"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="254dp"
        android:layout_height="34dp"
        android:layout_gravity="center"
        android:layout_marginStart="47dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="二子 ふたご futhago (twins)"

        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintEnd_toStartOf="@+id/buttonAudio3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <Button
        android:id="@+id/buttonAudio3"
        android:layout_width="49dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="28dp"
        android:textAlignment="center"
        app:icon="@android:drawable/ic_lock_silent_mode_off"
        app:iconPadding="@android:dimen/notification_large_icon_width"
        app:iconTint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAudio2"
        app:layout_constraintVertical_bias="0.6" />

    <Button
        android:id="@+id/buttonAudio4"
        android:layout_width="49dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="64dp"
        android:textAlignment="center"
        app:icon="@android:drawable/ic_lock_silent_mode_off"
        app:iconPadding="@android:dimen/notification_large_icon_width"
        app:iconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.303" />

</androidx.constraintlayout.widget.ConstraintLayout>